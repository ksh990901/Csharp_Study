namespace Calculator_win01
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            int Plus1, Plus2;
            Plus1 = int.Parse(textBox1.Text);
            Plus2 = int.Parse(textBox2.Text);
            textBox3.Text = (Plus1 + Plus2).ToString();
            label1.Text = "+";
        }
    }
}
